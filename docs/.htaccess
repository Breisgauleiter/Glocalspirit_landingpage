# .htaccess f√ºr glocalSpirit Testnutzer Backend (Strato-optimiert)
# Zus√§tzliche Sicherheit und Konfiguration

# ===============================================
# üõ°Ô∏è STRATO-SPEZIFISCHE OPTIMIERUNGEN
# ===============================================

# PHP-Einstellungen f√ºr Strato
<IfModule mod_php8.c>
    php_value max_execution_time 30
    php_value memory_limit 128M
    php_value post_max_size 10M
    php_value upload_max_filesize 10M
</IfModule>

# CORS-Headers f√ºr alle Backend-Dateien
<IfModule mod_headers.c>
    # Globale CORS-Headers
    Header always set Access-Control-Allow-Origin "*"
    Header always set Access-Control-Allow-Methods "GET, POST, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type, X-Requested-With, Authorization"
    Header always set Access-Control-Max-Age "3600"
    
    # Content-Type f√ºr PHP-Dateien
    <FilesMatch "\.(php)$">
        Header set Content-Type "application/json; charset=UTF-8"
    </FilesMatch>
</IfModule>

# ===============================================
# üõ°Ô∏è SICHERHEITS-HEADERS
# ===============================================

# CORS Headers (wird auch im PHP-Script gesetzt)
<IfModule mod_headers.c>
    # Nur f√ºr submit_testuser.php
    <Files "submit_testuser.php">
        Header always set Access-Control-Allow-Methods "POST, OPTIONS"
        Header always set Access-Control-Allow-Headers "Content-Type"
        Header always set Access-Control-Max-Age "3600"
    </Files>
    
    # Sicherheits-Headers f√ºr alle Dateien
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# ===============================================
# üîí DATEISCHUTZ
# ===============================================

# Log-Dateien vor direktem Zugriff sch√ºtzen
<Files "*.txt">
    Order allow,deny
    Deny from all
</Files>

# Rate-Limit-Dateien sch√ºtzen
<Files "rate_limit_*">
    Order allow,deny
    Deny from all
</Files>

# Konfigurationsdateien sch√ºtzen (zus√§tzlicher Schutz)
<Files "config.php">
    # Nur √ºber include/require zug√§nglich
    Order allow,deny
    Deny from all
</Files>

# ===============================================
# üìù FEHLERBEHANDLUNG
# ===============================================

# Custom Error Pages (optional)
# ErrorDocument 404 /error404.html
# ErrorDocument 500 /error500.html

# PHP Errors in Log-Datei statt auf Bildschirm
php_flag display_errors Off
php_flag log_errors On
php_value error_log error_log.txt

# ===============================================
# ‚ö° PERFORMANCE
# ===============================================

# Komprimierung aktivieren
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
</IfModule>

# Browser Caching f√ºr statische Dateien
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
    
    # PHP-Dateien nicht cachen
    ExpiresByType application/x-httpd-php "access plus 0 seconds"
</IfModule>

# ===============================================
# üö´ BLOCK SUSPICIOUS REQUESTS
# ===============================================

# Blockiere bekannte Bot-User-Agents (optional)
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Blockiere direkten Zugriff auf PHP-Dateien au√üer submit_testuser.php
    RewriteCond %{REQUEST_URI} !^/submit_testuser\.php$
    RewriteCond %{REQUEST_URI} \.php$
    RewriteRule ^.*$ - [F,L]
    
    # Blockiere Requests mit verd√§chtigen Query-Strings
    RewriteCond %{QUERY_STRING} (<|%3C).*script.*(>|%3E) [NC,OR]
    RewriteCond %{QUERY_STRING} GLOBALS(=|\[|\%[0-9A-Z]{0,2}) [OR]
    RewriteCond %{QUERY_STRING} _REQUEST(=|\[|\%[0-9A-Z]{0,2}) [OR]
    RewriteCond %{QUERY_STRING} ^.*(\[|\]|\(|\)|<|>).* [NC,OR]
    RewriteCond %{QUERY_STRING} (NULL|OUTFILE|LOAD_FILE) [OR]
    RewriteCond %{QUERY_STRING} (\./|\../|\.../)+(motd|etc|bin) [NC]
    RewriteRule ^.*$ - [F,L]
</IfModule>
